  %body{ng-controller:"CognitiveController", style:"padding-top:51px;"}
    .container-fluid{ng-controller:"CognitiveHeaderController"}
      %nav.navbar.navbar-fixed-top{style:"background:white; border-bottom: solid 1px #eeeeee;"}
        .navbar-inner
          .container-fluid
            .navbar-header
              %a.navbar-brand{ui-sref: "index"}
                .text-info
                  %i.fa.fa-cube{style:"padding:0;margin:0;"}
                  Cognitive
            .collapse.navbar-collapse{ng-controller:"AuthenticationController"}
              %ul.nav.navbar-nav
                %li{ng-show: "isAuthenticated()"}
                  %a{ui-sref: "whiteboard.experiment"} WhiteBoard
                %li{ng-hide: "isAuthenticated()"}
                  %a{ng-click: "openLoginModal()"} WhiteBoard
              %ul.nav.navbar-nav.navbar-right
                %li.dropdown{ng-show:"isAuthenticated()"}
                  %a#user-dropdown-menu.dropdown-toggle{type:"button",data-toggle:"dropdown", aria-expanded:"true"}
                    %i.glyphicon.glyphicon-user
                    {% verbatim %}{{user.name}}{% endverbatim %}
                    %span.caret
                  %ul.dropdown-menu
                    %li{role:"presentation", ng-click:"logout()"}
                      %a{role:"menuitem", tabindex:"10"}
                        Log out

                %li{ng-hide:"isAuthenticated()", ng-click: "openLoginModal()"}
                  %a Login

    .container-fluid.cognitive-content
      %div{ui-view:"main"}
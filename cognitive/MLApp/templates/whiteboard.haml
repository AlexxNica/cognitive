- extends 'base.haml'

- block 'extrahead'

  - load staticfiles
  %link{href: "{{STATIC_URL}}lib/jquery-ui/jquery-ui.css", rel: "stylesheet"}
  %link{href: "{{STATIC_URL}}css/lib/colorbox.css", rel: "stylesheet"}
  %link{href: "{{STATIC_URL}}css/whiteboard.css", rel: "stylesheet"}

  %script{src: "{{STATIC_URL}}lib/jquery-ui/jquery-ui.js", type: "text/javascript"}
  %script{src: "{{STATIC_URL}}lib/d3/d3.js", type: "text/javascript"}
  %script{src: "{{STATIC_URL}}ts/components/base.js", type: "text/javascript"}
  %script{src: "{{STATIC_URL}}ts/components/math_formula.js", type: "text/javascript"}
  %script{src: "{{STATIC_URL}}js/api/client_v1.js", type: "text/javascript"}
  %script{src: "{{STATIC_URL}}ts/whiteboard_manager.js", type:"text/javascript"}
  %script{src: "{{STATIC_URL}}ts/whiteboard.js", type: "text/javascript"}
  %script{src: "{{STATIC_URL}}js/lib/jquery.csv-0.71.min.js", type: "text/javascript"}
  %script{src: "{{STATIC_URL}}js/lib/jquery.colorbox-min.js", type: "text/javascript"}

- block 'contents'

  #main-menu.zero_padding_margin
  -#  new tabs like `setting`, `experiment` will be appeared here

  .whiteboard-flyout{style:"left: 55px;"}
    .flyout-wrapper
      %ul
        %li.menu_bar.introduction
          %i.fa.fa-file-text-o
          Introduction
        %li.menu_bar.data_input 
          %i.fa.fa-arrow-up
          Input Data
        %li.menu_bar.add_row 
          %i.fa.fa-list-ol
          Add Row
        %li.menu_bar.add_math_fomula
          %i.fa.fa-xing
          Math formula
        %li.menu_bar.normalization 
          %i.fa.fa-align-center
          Normalization
        %li.menu_bar.projection 
          %i.fa.fa-cogs
          Column Selection
        %li.menu_bar.remove_column
          %i.fa.fa-cut
          Remove Duplicates
        %li.menu_bar.remove_missing_value
          %i.fa.fa-sliders
          Remove Missing Value
        %li.menu_bar.metadata 
          %i.fa.fa-share-alt
          Metadata Editor
        %li.menu_bar.machine_learning 
          %i.fa.fa-yelp
          Machine Learning
        %li.menu_bar.kafka
          %i.fa.fa-yelp
          Apache Kafka
        %li.menu_bar.influx_db
          %i.fa.fa-yelp
          InfluxDB
        %li.menu_bar.kibana
          %i.fa.fa-yelp
          Kibana
        %li.menu_bar.elastic_search
          %i.fa.fa-yelp
          Elastic Search

  #visualization
    %svg#root.root
      %g#layer-0
      %g#layer-1
      %g#layer-2
      %g#layer-3
      %g#layer-4

  #component_arguments
    .detail.introduction
      .content
        %h2 
          %i.fa.fa-file-text-o
          Introduction
        %p{style:"font-size:14pt; padding-left: 20px;padding-top: 10px;"} 
          User can make any components shown in menu bar on left-side of this page.
          The details corespond to the component you choose are specified in the
          center of this page appeared after your click.
          The most right-side column is for showing the history of your manupuration.
          To get result, please don't forget click 'Run' button at the bottom of menu
          bar.

    .detail.data_input
      .content
        %h2 
          %i.fa.fa-arrow-up
          Input
        .form-group{style:"margin-top: 30px;"}
          %label.col-lg-2.control-label{for:"inputFile"} File
          .col-lg-10
            %input#inputFile{type:"file", accept:".csv"}
        %button.btn.btn-material-indigo.add_btn.add_input.right{type:"button"} ADD

    .detail.add_row.display_none
      .content
        %h2
          %i.fa.fa-list-ol
          Add Row
        .add_row_form{style:"list-style:none; font-size: 18pt;"}
        %button.btn.btn-material-indigo.add_btn.add_row.right{type:"button"} ADD

    .detail.add_math_fomula.display_none
      .content
        %h2
          %i.fa.fa-xing
          Math Formula
        .row
          %label.col-lg-3.control-label{for:"select"} Method
          .col-lg-9
            %select#formula_method.form-control{style:"font-size:12pt;"}
              %option Add
              %option Sub
              %option Mult
              %option Div

        .row{style:"padding-top:20px;"}
          %label.col-lg-3.control-label{for:"select"} Column
          .col-lg-9
            %select#formula_column.form-control

        .row{style:"padding-top:20px;"}
          %label.col-lg-3.control-label{for:"select"} Constant
          .col-lg-9
            %input#formula_constant.form-control.floating-label#focusedInput{type:"text", placeholder: "value"}
        %button.btn.btn-material-indigo.add_btn.add_math_fomula.right{type:"button"} ADD

    .detail.normalization.display_none
      .content
        %h2
          %i.fa.fa-align-center
          Normalization
        .form-group
          .row{style:"padding-top:20px;"}
            %label.col-lg-3.control-label{for:"select"} Method
            .col-lg-9
              %select#normalization_method.form-control
                %option{value: 0, style:"font-size:20pt;"} Standard
          
          .row{style:"padding-top:20px;"}
            %label.col-lg-3.control-label{for:"select"} Column
            .col-lg-9
              %select#normalization_column.form-control
        %button.btn.btn-material-indigo.add_btn.add_normalization.right{type:"button"} ADD

    .detail.projection.display_none
      .content
        %h2
          %i.fa.fa-cogs
          Column Selection     
        .form-group.projection_form
        %button.btn.btn-material-indigo.add_btn.add_projection.right{type:"button"} ADD
        .projection.minus-bottom.right
          %i.fa.fa-minus.minus-icon
        .projection.plus-bottom.right
          %i.fa.fa-plus.plus-icon

    .detail.remove_column.display_none
      .content
        %h2
          %i.fa.fa-cut
          Remove Duplicates
        .form-group.remove_duplicates_form
        %button.btn.btn-material-indigo.add_btn.add_remove_duplicates.right{type:"button"} ADD
        .remove_duplicates.minus-bottom.right
          %i.fa.fa-minus.minus-icon
        .remove_duplicates.plus-bottom.right
          %i.fa.fa-plus.plus-icon

    .detail.remove_missing_value.display_none
      .content
        %h2
          %i.fa.fa-sliders
          Remove Missing Values
        .form-group
          %label.col-lg-3.control-label{for:"select"} Method
          .col-lg-9
            %select#remove_missing_value_method.form-control
              %option Replace_mean
              %option Replace_median
              %option Replace_mode
              %option Drop_row
        %button.btn.btn-material-indigo.add_btn.add_remove_missing_value.right{type:"button"} ADD

    .detail.metadata.display_none
      .content
        %h2
          %i.fa.fa-share-alt
          Metadata
        .form-group
          #metadata_discriptions{style:"padding: 30px;"}
        %button.btn.btn-material-indigo.add_btn.add_metadata.right{type:"button", style:" margin-top: 40px;"} ADD

    .detail.machine_learning.display_none
      .content
        %h2
          %i.fa.fa-yelp
          Machine Learning
        .form-group
          .row
            %label.col-lg-3.control-label{for:"select"} Method
            .col-lg-9
              %select.form-control.machine_learning_select#formula_method#select{style:"font-size:20pt;"}
                %option Linear_SVM
                %option Nearest_Neighbours
                %option Decision_Tree
                %option Random_Forest
                %option Naive_Bayes
        .form-group
          .row
            %label.col-lg-3.control-label{for:"select"} Target Column
            .col-lg-9
              %select.form-control.machine_learning_target#formula_method#select{style:"font-size:20pt;"}

        .form-group
          .row
            %label.col-lg-3.control-label{for:"select"} Train Data Percentage
            .col-lg-9
              %select.form-control.machine_learning_target_parcentage#formula_method#select{style:"font-size:20pt;"}
                %option 10
                %option 20
                %option 30
                %option 40
                %option 50
                %option 60
                %option 70
                %option 80
                %option 90
        %button.btn.btn-material-indigo.add_btn.add_machine_learning.right{type:"button"} ADD

  #whiteboard-right-menu
    %p#execute-btn.add-btn.execute-btn
      %i.fa.fa-play-circle-o.zero_padding_margin{style:"font-size:32pt;"}
      Run
    %a.show_result_graph{href:"#result_table", style:"color:black;"}
      %p.show_result_icon
        %i.fa.fa-bar-chart.zero_padding_margin{style:"font-size:27pt;"}
        Show
